		<script define:vars={{ allRecipes: recipes }}>
			// allRecipes is now available as a variable
			let tinaClient = null;
			let currentFilter = 'all';

			// Category filtering functionality
			function initCategoryFilters() {
				const filterButtons = document.querySelectorAll('.category-filter');
				const postsGrid = document.querySelector('.posts-grid');

				filterButtons.forEach(button => {
					button.addEventListener('click', () => {
						// Update active button
						document.querySelector('.category-filter.active')?.classList.remove('active');
						button.classList.add('active');

						// Get selected category
						const category = button.dataset.category;
						currentFilter = category;

						// Filter posts
						filterPosts(category);
					});
				});
			}

			function filterPosts(category) {
				const postCards = document.querySelectorAll('.post-card-link');

				postCards.forEach(card => {
					const postCard = card.querySelector('.post-card');
					const postCategory = postCard.dataset.category;

					if (category === 'all' || postCategory === category) {
						card.style.display = 'block';
						// Trigger reflow for smooth animation
						setTimeout(() => {
							card.style.opacity = '1';
							card.style.transform = 'scale(1)';
						}, 10);
					} else {
						// Hide with animation
						card.style.opacity = '0';
						card.style.transform = 'scale(0.95)';
						setTimeout(() => {
							card.style.display = 'none';
						}, 200);
					}
				});

				// Update counts if needed
				updateCategoryCounts();
			}

			function updateCategoryCounts() {
				const categories = ['all', 'Recipes', 'Cooking Tips', 'Kitchen Adventures', 'Ingredient Spotlight', 'Behind the Scenes'];
				const postCards = document.querySelectorAll('.post-card-link');

				categories.forEach(cat => {
					let count = 0;
					if (cat === 'all') {
						count = postCards.length;
					} else {
						postCards.forEach(card => {
							const postCard = card.querySelector('.post-card');
							if (postCard.dataset.category === cat) {
								count++;
							}
						});
					}

					const countElement = document.querySelector(`[data-category="${cat}"] .category-count`);
					if (countElement) {
						countElement.textContent = count;
					}
				});
			}

			// Initialize everything when DOM is loaded
			document.addEventListener('DOMContentLoaded', () => {
				initCategoryFilters();
			});

			// For now, we'll use client-side search only
			// TODO: Add Tina CMS integration when needed

			async function performSearch() {
				const query = document.getElementById('searchInput').value.toLowerCase().trim();

				if (tinaClient && query.length > 0) {
					// Use Tina CMS search
					try {
						const posts = await tinaClient.searchPosts(query);
						if (posts) {
							// Convert Tina CMS format to our expected format
							const recipes = posts.map(post => ({
								id: post.id,
								slug: post.id,
								data: {
									title: post.title,
									description: post.description,
									heroImage: post.heroImage,
									category: post.category
								}
							}));
							renderRecipes(recipes);
							updateResultsCount(recipes.length);
						} else {
							clientSideSearch(query);
						}
					} catch (error) {
						console.error('Tina search failed, falling back to client-side search');
						clientSideSearch(query);
					}
				} else if (query.length > 0) {
					clientSideSearch(query);
				} else {
					// Show all recipes
					if (tinaClient) {
						try {
							const posts = await tinaClient.getAllPosts();
							if (posts) {
								// Convert Tina CMS format to our expected format
								const recipes = posts.map(post => ({
									id: post._sys?.filename?.replace('.md', '') || post.id,
									slug: post._sys?.filename?.replace('.md', '') || post.id,
									data: {
										title: post.title,
										description: post.description,
										heroImage: post.heroImage,
										category: post.category
									}
								}));
								renderRecipes(recipes);
								updateResultsCount(recipes.length);
							}
						} catch (error) {
							console.log('Showing static recipes');
						}
					}
				}
			}

			function clientSideSearch(query) {
				const cards = document.querySelectorAll('.post-card-link');

				let visibleCount = 0;
				cards.forEach(card => {
					const cardElement = card.querySelector('.post-card');
					const searchText = cardElement.dataset.search || '';
					const category = cardElement.dataset.category || '';

					const searchableText = `${searchText} ${category}`.toLowerCase();
					const isVisible = !query || searchableText.includes(query);

					card.style.display = isVisible ? 'block' : 'none';
					if (isVisible) visibleCount++;
				});

				updateResultsCount(visibleCount);
			}

			async function applyFilters() {
				const categoryFilter = document.getElementById('categoryFilter').value;
				const difficultyFilter = document.getElementById('difficultyFilter').value;
				const sortBy = document.getElementById('sortBy').value || document.getElementById('sortByHeader').value;

				if (tinaClient) {
					// Use Tina CMS for filtering
					try {
						let recipes = await tinaClient.getAllRecipes();

						if (recipes) {
							// Apply filters
							if (categoryFilter) {
								recipes = recipes.filter(recipe => recipe.category === categoryFilter);
							}
							if (difficultyFilter) {
								recipes = recipes.filter(recipe => recipe.difficulty === difficultyFilter);
							}

							// Apply sorting
							if (sortBy) {
								recipes.sort((a, b) => {
									switch(sortBy) {
										case 'prepTime':
											return (a.prepTime || 0) - (b.prepTime || 0);
										case 'totalTime':
											return ((a.prepTime || 0) + (a.cookTime || 0)) - ((b.prepTime || 0) + (b.cookTime || 0));
										default: // title
											return a.title.localeCompare(b.title);
									}
								});
							}

							renderRecipes(recipes);
							updateResultsCount(recipes.length);
						} else {
							clientSideFilter(categoryFilter, difficultyFilter, sortBy);
						}
					} catch (error) {
						console.error('Tina filtering failed, falling back to client-side filtering');
						clientSideFilter(categoryFilter, difficultyFilter, sortBy);
					}
				} else {
					clientSideFilter(categoryFilter, difficultyFilter, sortBy);
				}
			}

			function clientSideFilter(categoryFilter, difficultyFilter, sortBy) {
				const cards = document.querySelectorAll('.post-card-link');
				let visibleCount = 0;

				// First, apply filters
				cards.forEach(card => {
					const cardElement = card.querySelector('.post-card');
					const category = cardElement.dataset.category;
					const difficulty = cardElement.dataset.difficulty || '';

					const categoryMatch = !categoryFilter || category === categoryFilter;
					const difficultyMatch = !difficultyFilter || difficulty === difficultyFilter;

					const isVisible = categoryMatch && difficultyMatch;
					if (isVisible) visibleCount++;
				});

				// Then apply sorting if needed
				if (sortBy) {
					sortCards(sortBy);
				}

				updateResultsCount(visibleCount);
			}

			function sortCards(sortBy) {
				const grid = document.querySelector('.posts-grid');
				const cards = Array.from(grid.children).filter(card => card.style.display !== 'none');

				cards.sort((a, b) => {
					switch(sortBy) {
						case 'prepTime':
							const aPrep = parseInt(a.querySelector('.recipe-meta-item')?.textContent?.match(/\d+/)?.[0] || '0');
							const bPrep = parseInt(b.querySelector('.recipe-meta-item')?.textContent?.match(/\d+/)?.[0] || '0');
							return aPrep - bPrep;
						case 'totalTime':
							const aTotal = parseInt(a.querySelector('.recipe-meta-item:nth-child(1)')?.textContent?.match(/\d+/)?.[0] || '0') +
										  parseInt(a.querySelector('.recipe-meta-item:nth-child(2)')?.textContent?.match(/\d+/)?.[0] || '0');
							const bTotal = parseInt(b.querySelector('.recipe-meta-item:nth-child(1)')?.textContent?.match(/\d+/)?.[0] || '0') +
										  parseInt(b.querySelector('.recipe-meta-item:nth-child(2)')?.textContent?.match(/\d+/)?.[0] || '0');
							return aTotal - bTotal;
						default: // title
							return a.dataset.title.localeCompare(b.dataset.title);
					}
				});

				// Reorder visible cards
				cards.forEach(card => grid.appendChild(card));
			}

			function renderRecipes(recipes) {
				const grid = document.querySelector('.posts-grid');
				grid.innerHTML = '';

				recipes.forEach(recipe => {
					const card = createRecipeCard(recipe);
					grid.appendChild(card);
				});
			}

			function createRecipeCard(recipe) {
				// Handle both Tina CMS format (recipe.data) and static format
				const recipeData = recipe.data || recipe;
				const slug = recipe.slug || recipe.id || 'unknown';

				const card = document.createElement('div');
				card.className = 'post-card';
				card.setAttribute('data-category', recipeData.category || '');
				card.setAttribute('data-title', (recipeData.title || '').toLowerCase());
				// Add search data for client-side filtering
				const searchText = `${recipeData.title || ''} ${recipeData.description || ''} ${recipeData.category || ''}`.toLowerCase();
				card.setAttribute('data-search', searchText);

				const cardLink = document.createElement('a');
				cardLink.href = `/recipes/${slug}`;
				cardLink.className = 'post-card-link';

				const cardContent = `
					<div class="post-image-container">
						<img src="${recipeData.heroImage || `https://placehold.co/400x200?text=${encodeURIComponent(recipeData.category || 'No Image')}`}" alt="${recipeData.title}" class="post-image" />
					</div>

					<div class="post-content">
						<h2 class="post-title">${recipeData.title || 'Untitled'}</h2>
						<p class="post-description">${recipeData.description || 'No description available.'}</p>

						<div class="post-meta">
							<span class="post-category">${recipeData.category || 'General'}</span>
							<span class="post-read-more">Read More ‚Üí</span>
						</div>
					</div>
				`;

				const article = document.createElement('article');
				article.className = 'post-card';
				article.innerHTML = cardContent;

				cardLink.appendChild(article);
				return cardLink;
			}

			function updateResultsCount(count) {
				const countElement = document.getElementById('resultsCount');
				const visibleCards = count !== undefined ?
					count :
					document.querySelectorAll('.post-card-link:not([style*="none"])').length;

				countElement.textContent = `${visibleCards} recipe${visibleCards !== 1 ? 's' : ''} found`;

				const noResults = document.getElementById('noResults');
				noResults.style.display = visibleCards === 0 ? 'block' : 'none';
			}

			// Initialize
			document.addEventListener('DOMContentLoaded', function() {
				initTinaClient();

				// Sync sort dropdowns
				document.getElementById('sortBy').addEventListener('change', function() {
					document.getElementById('sortByHeader').value = this.value;
				});

				document.getElementById('sortByHeader').addEventListener('change', function() {
					document.getElementById('sortBy').value = this.value;
				});

				// Search on enter
				document.getElementById('searchInput').addEventListener('keypress', function(e) {
					if (e.key === 'Enter') {
						performSearch();
					}
				});

				// Add search input event listener for live search
				let searchTimeout;
				document.getElementById('searchInput').addEventListener('input', function() {
					clearTimeout(searchTimeout);
					searchTimeout = setTimeout(performSearch, 300);
				});
			});
		</script>
